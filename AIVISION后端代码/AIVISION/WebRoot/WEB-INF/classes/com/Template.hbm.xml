<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="com.Template" table="person">
	<id name="code" type="java.lang.String">
	 <column name="code" />
	 <generator class="assigned" />
	</id>
		<property name="name" type="java.lang.String"> <column name="name" length="20"  /></property>
		<property name="sex" type="java.lang.String"><column name="sex" length="4" /></property>
		<property name="feature" type="java.lang.String"><column name="feature" /></property>
		<property name="type" type="java.lang.String"><column name="type" length="20" /></property>
	</class>

</hibernate-mapping>
